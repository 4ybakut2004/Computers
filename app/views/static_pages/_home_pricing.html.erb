<section id="pricing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">Цены</h2>
        </div>

        <% @prices.in_groups_of(6, false).each do |array| %>
            <div class="row">
                <% array.each_with_index do |price, i| %>
                    <div class="col-sm-6 col-md-2">
                        <%= render partial: 'static_pages/service_price', locals: { service_object: price, milliseconds: i * 200 } %>
                    </div>
                <% end %>
            </div>
        <% end %>

        *- (особые условия заказа) к таким условиям относится отдаленность проживания
    </div>
</section><!--/#pricing-->